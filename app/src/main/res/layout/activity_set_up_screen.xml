    <TextView
        android:id="@+id/player4TxtView"
        android:layout_width="150dp"
        android:layout_height="18dp"
        android:layout_marginTop="12dp"
        android:text="Player 4"
        android:textAlignment="viewStart"
        app:layout_constraintStart_toStartOf="@+id/player1TxtView"
        app:layout_constraintTop_toBottomOf="@+id/player3TxtView"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/player3TxtView"
        android:layout_width="150dp"
        android:layout_height="18dp"
        android:layout_marginTop="12dp"
        android:text="Player 3"
        android:textAlignment="viewStart"
        app:layout_constraintStart_toStartOf="@+id/player1TxtView"
