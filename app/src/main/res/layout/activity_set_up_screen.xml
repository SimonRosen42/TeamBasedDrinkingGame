    <TextView
        android:id="@+id/player12TxtView"
        android:layout_width="150dp"
        android:layout_height="18dp"
        android:layout_marginTop="12dp"
        android:text="Player 12"
        android:textAlignment="viewStart"
        app:layout_constraintStart_toStartOf="@+id/player9TxtView"
        app:layout_constraintTop_toBottomOf="@+id/player11TxtView"
