        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Team 3"
        android:textAlignment="viewStart"
        app:layout_constraintStart_toStartOf="@+id/team1EditTxt"
        app:layout_constraintTop_toBottomOf="@+id/player4TxtView"
